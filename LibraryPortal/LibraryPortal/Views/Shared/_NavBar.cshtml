@using Microsoft.AspNet.Identity
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    @*<a class="navbar-brand" href="#">LibraryHome</a>*@
    @Html.ActionLink("LibraryHome", "UserHome", "Home", null, new { @class = "navbar-brand" })
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            @*<li class="nav-item active">
                   @Html.ActionLink("Register","Register","Home",new { @class="nav-link"})
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Login", "LogIn", "Home", new { @class = "nav-link" })
                </li>*@
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
            </li>

            @if (Request.IsAuthenticated)
            {
                @Html.AntiForgeryToken()
                <li class="nav-item">
                    <div class="nav-link">
                        @Html.Encode(User.Identity.GetUserName())
                    </div>
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Log Out", "LogOut", "Home", null, new { @class = "nav-link" })
                </li>
            }
            else
            {
                <li class="nav-item">
                    @*<a class="nav-link" href="#">Features</a>*@
                    @Html.ActionLink("Register", "Register", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Log In", "LogIn", "Home",null, new { @class = "nav-link" })*@
                    <button class="LogInLink nav-link" id="LogInBtn" style="background:transparent;border:none;">Log In</button>
                </li>
            }

        </ul>
        @*<form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>*@
    </div>
</nav>


@{ Html.RenderPartial("~/Views/Home/LoginModalPartial.cshtml");}
